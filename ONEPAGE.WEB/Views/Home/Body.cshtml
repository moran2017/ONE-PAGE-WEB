
@{
    ViewBag.Title = "Body";
}
<section class="bg-primary" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-heading text-white">Tenemos lo de necesitas!</h2>
                <hr class="light my-4">
                <p class="text-faded mb-4">Steaks Perú tiene todo lo que neceistas para comprar cortes de carne a domicilio!</p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="https://moranfrayrehector.wixsite.com/steaksperu/shop">SHOOP</a>
            </div>
        </div>
    </div>
</section>
<section id="services">
